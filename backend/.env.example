# Example .env file

# This is the connection string for your MongoDB database.
# Replace the placeholder with your actual connection string.
DATABASE_URL="mongodb+srv://youruser:yourpassword@yourcluster.mongodb.net/yourdatabase?retryWrites=true&w=majority"

# This is the secret key for signing JWTs.
# Replace it with a long, random string.
JWT_SECRET="your-jwt-secret"

# This is the secret key for signing JWT refresh tokens.
# Replace it with a long, random string.
JWT_REFRESH_SECRET="your-jwt-refresh-secret"

# This is the encryption key for encrypting sensitive data.
# It must be a 32-character hexadecimal string.
ENCRYPTION_KEY="your-32-character-hex-encryption-key"
